{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only server",
    "start": "node dist/server",
    "serve": "NODE_ENV=production pm2 start dist/server",
    "clean": "rm -rf dist && rm -rf prisma/migrations",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only nexus/nexusSchema",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "npx prisma db seed --preview-feature"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^2.25.0",
    "apollo-server": "^2.25.1",
    "apollo-server-express": "^2.25.2",
    "apollo-server-micro": "^2.25.2",
    "aws-sdk": "^2.934.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cuid": "^2.1.8",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.1",
    "graphql-middleware": "^6.0.10",
    "graphql-scalars": "^1.10.0",
    "graphql-shield": "^7.5.0",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^1.0.0",
    "slugify": "^1.5.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-typescript": "^7.14.6",
    "@babel/preset-typescript": "^7.14.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/node": "^15.12.4",
    "@types/react": "^17.0.11",
    "prisma": "^2.25.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  }
}
